<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="vn.manroid.backupcontact.activity.MainActivity">

    <vn.manroid.backupcontact.custom.image.VTImageView
        android:layout_width="100dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/user"
        android:layout_height="100dp" />

    <vn.manroid.backupcontact.custom.textview.VTTextView
        android:textSize="25sp"
        android:id="@+id/vt_txt_spash"
        app:customFont="mylove.ttf"
        android:text="@string/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <vn.manroid.backupcontact.custom.edittext.VTEditText
        android:layout_width="150dp"
        app:customText="mylove.ttf"
        android:id="@+id/vt_edt_name"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <vn.manroid.backupcontact.custom.button.VTButton
        android:layout_marginTop="10dp"
        app:myText_1="Enter"
        app:myText_2="Name"
        android:id="@+id/vt_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
